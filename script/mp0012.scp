	// カメラ待ち
	WaitThread(1000)
	WaitThread(1001)
	WaitThread(1002)
	WaitThread(1003)

	// 移動待ち
	WaitThread(1)

	ChangeAnimation( "Kashu", "ANI_EV_TEBURI", -1, 1 )	// 手振り

