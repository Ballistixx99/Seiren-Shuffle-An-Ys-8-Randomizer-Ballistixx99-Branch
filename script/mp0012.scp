	ChangeSubAnimation("ADOL",SUBMOT_MOUTH,ANI_M_WAIT,1)
	SetChrWork("ADOL", CWK_FORCELIPSYNC, 0)
	Wait(20)
	
	ChangeAnimation( "Kashu", "ANI_EV_RYOTEKOSI_S", -1, 1 )	// 両手腰

	//─────────────────────────
	if (FLAG[TF_MENU_SELECT] == 1) {

