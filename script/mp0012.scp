	ChangeCameraDistance( 0 , 2.388f , 0 )		// 基本距離
	ChangeCameraElevation( 0 , -7.051f , 0 )	// 基本仰角
	RotateCamera( 0 , 112.972f , 0 )				// 角度
	ChangeCameraPers( 0 , 35.000f , 0 )			// 視野角
	SetCameraZPlane( 0.100f , 600.000f )			// ZPlane
