////////////////////////////////////////////////////////////////////////////////
function "npc_mv_kashu"
{
	while(1)
	{
		if (this.CHRWORK[CWK_NPCMODE] == NPC_MODE_WALK)
		{
			// 廊下を見て回るルートムーブ
			MoveTo("Kashu",-14.50f,-1.00f,0.00f,0.1f,0.25f)
			Wait(30)
			MoveTo("Kashu",-3.50f,-1.00f,0.00f,0.1f,0.25f)
			Wait(30)
		}
		else
		{
			// とりあえず待機させたい
			ChangeAnimation(this,"ANI_WAIT",-1,0)
			Wait(10)
		}
	}
}

