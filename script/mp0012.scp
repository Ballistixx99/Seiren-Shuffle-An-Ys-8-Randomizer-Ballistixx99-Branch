	WaitCloseWindow()
	
	WaitAnimation2( "Kashu" , -1, 1, "ANI_EV_RYOTEKOSI_E",  0)
	ChangeAnimation( "Kashu", "ANI_EV_UDEGUMI_S", -1, 1 )	// 腕組
	
	// カシュー
	TalkPopup("Kashu", 0, 2, 0, 0, 0) {
		"#000m……そういや、さっき船長が"
		"アドルを探してたみたいだぜ。\p"
		"#011e#000mもうすぐ通過するとか何とか"
		"言ってたみたいだけど……\p"
