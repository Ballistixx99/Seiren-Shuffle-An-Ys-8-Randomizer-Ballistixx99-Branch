//-------------------------------------------
// init
function "init"
{
	//遠景制御
	MapHide("ev_kitaground00" , 0 )
	MapHide("ev_mayu" , 0 )

	if( FLAG[SF_EVENT_ON] )
	{
		CallFunc("system:himorogi_grow")	//ヒモロギ成長
	
		if(FLAG[GF_TBOX_DUMMY087] ){	// ジャンダルムの頂上に到着する
			MapHide("ev_kitaground00" , 1 )
			MapHide("ev_mayu" , 1 )
		}
	}
}

